# ========== FRONTEND CONFIGURATION ==========

# Vite environment mode
VITE_ENV=development

# API Configuration
# Point to backend API (local development or cloud)
VITE_API_URL=http://localhost:3000/api

# API timeout in milliseconds
VITE_API_TIMEOUT=30000

# App identification
VITE_APP_NAME=WorkForce Management System
VITE_APP_VERSION=1.0.0

# Authentication & Demo Credentials
# For development/testing purposes
VITE_DEMO_EMAIL=john.anderson@company.com
VITE_DEMO_PASSWORD=demo123

# Feature Flags
VITE_ENABLE_MOCK_API=true
VITE_ENABLE_DEBUG_MODE=false

# Feature Configuration
VITE_ENABLE_EMAIL_COMMUNICATION=true
VITE_ENABLE_WHATSAPP_COMMUNICATION=true
VITE_ENABLE_PAYROLL_PROCESSING=true
VITE_ENABLE_LEAVE_MANAGEMENT=true

# Optional: Analytics & Monitoring
# VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# VITE_GOOGLE_ANALYTICS_ID=your-analytics-id

# ========== BACKEND CONFIGURATION ==========
# Note: If running a full-stack project, copy and use these variables in the server/.env file

# Server Port
PORT=3000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/workforce
DB_NAME=workforce

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-this
REFRESH_TOKEN_EXPIRE=30d

# Authentication
AUTH_ENABLED=true
SESSION_SECRET=your-session-secret-key

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@workforce.app
SMTP_TLS=true

# WhatsApp API Configuration
WHATSAPP_ACCOUNT_SID=your-twilio-account-sid
WHATSAPP_AUTH_TOKEN=your-twilio-auth-token
WHATSAPP_PHONE_NUMBER=whatsapp:+1234567890

# Slack Integration (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# File Upload Configuration
MAX_UPLOAD_SIZE=5242880
UPLOAD_DIR=uploads/

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Feature Flags
ENABLE_EMAIL=true
ENABLE_WHATSAPP=true
ENABLE_SLACK=false

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600

# Timezone
TIMEZONE=UTC
